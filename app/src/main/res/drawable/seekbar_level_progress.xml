<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="16dp" />
            <solid
                android:color="@color/color_30000000" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <corners
                    android:radius="16dp" />
                <solid
                    android:color="@color/color_DD3518" />
            </shape>
        </clip>
    </item>
</layer-list>