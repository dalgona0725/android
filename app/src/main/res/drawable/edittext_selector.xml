<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- EditText 배경 그리기 (밑줄) app:backgroundTint 를 사용하지 않고 background 속성을 활용한다. -->

    <!-- 눌렀을 때 -->
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="1dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">

                    <stroke android:width="0.5dp"
                        android:color="@color/popkon_signup_divider" />

                    <solid android:color="#00FFFFFF" />

                    <padding android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp" />

                </shape>
            </item>

        </layer-list>
    </item>

    <!-- 포커스가 있을 때 -->
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="1dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">

                    <stroke android:width="0.5dp"
                        android:color="@color/popkon_signup_divider" />

                    <solid android:color="#00FFFFFF" />

                    <padding android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp" />

                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 보통 -->
    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">

                    <stroke android:width="0.5dp"
                        android:color="@color/popkon_signup_divider" />

                    <solid android:color="#00FFFFFF" />

                    <padding android:bottom="3dp"
                        android:left="3dp"
                        android:right="3dp"
                        android:top="3dp" />

                </shape>
            </item>

        </layer-list>
    </item>

</selector>