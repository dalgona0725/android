<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_popup"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33.8dp"
        android:background="@color/main_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15.5dp"
        android:text="@string/block_dialog_title"
        android:textColor="@color/main_text"
        android:textSize="@dimen/txt_dialog_subtitle"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.8dp"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="33.3dp"
            android:layout_marginBottom="12dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="2.3sp"
            android:text="@string/block_dialog_message"
            android:textColor="@color/popkon_limit_popup_title_color"
            android:textSize="@dimen/txt_dialog_subtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="14.5dp"
            android:layout_marginBottom="8.3dp"
            android:paddingLeft="11dp"
            android:paddingRight="20dp"
            android:paddingTop="14.3dp"
            android:paddingBottom="13.5dp"
            android:orientation="vertical"
            android:background="@drawable/shape_block_dialog_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.3dp"
                    android:text="@string/block_dialog_reg_date"
                    android:textSize="11.6sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13.3dp"
                    android:text="@string/block_dialog_divider"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:id="@+id/tv_reg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.3dp"
                    android:text="@string/block_dialog_period"
                    android:textSize="11.6sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13.3dp"
                    android:text="@string/block_dialog_divider"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.3dp"
                    android:text="@string/block_dialog_reason"
                    android:textSize="11.6sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13.3dp"
                    android:text="@string/block_dialog_divider"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.9sp"
                    android:textColor="@color/popkon_limit_popup_title_color"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_counsel_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="14.5dp"
            android:layout_marginBottom="8.3dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="2.3sp"
            android:text="@string/block_dialog_guide"
            android:textSize="12.3sp"
            android:textColor="#7a7a7a"/>

        <TextView
            android:id="@+id/btn_counsel"
            android:layout_width="match_parent"
            android:layout_height="35.3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="14.5dp"
            android:layout_marginBottom="8.8dp"
            android:text="@string/block_dialog_counsel"
            android:textSize="12.5sp"
            android:textColor="#8b8b8b"
            android:background="@drawable/shape_block_dialog_counsel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/btn_ok_xml"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/popup_ok_text"
            android:textSize="@dimen/txt_button"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>