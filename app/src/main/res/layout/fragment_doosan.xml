<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/present_popkon_divider"/>

    <LinearLayout
        android:id="@+id/linear_popkon"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/present_popkon_bg"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_popkon_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#1f1714"
                android:textSize="@dimen/txt_dialog_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_popkon_purchase"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_popkon_purchase_bg"
                android:gravity="center"
                android:text="@string/popkon_purchase"
                android:textColor="@color/present_popkon_purchase_text"
                android:textSize="@dimen/txt_button"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gift_tab_small_popkon_width"
                    android:layout_height="@dimen/gift_tab_small_popkon_height"
                    android:layout_marginRight="7.3dp"
                    android:background="@drawable/shape_popcorn"/>

                <TextView
                    android:id="@+id/tv_title_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginRight="17dp"
                    android:textSize="13.5sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="0.8dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="16.5dp"
                    android:background="@color/gift_divider_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginRight="7.5dp"
                    android:text="@string/gift_fragment_popkon_send_start"
                    android:textSize="12sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_start_popkon"
                    android:layout_width="78.3dp"
                    android:layout_height="22.3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="4"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_marginRight="14.5dp"
                    android:text="1"
                    android:textSize="10.5sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"
                    android:background="@drawable/present_edit_sub_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginRight="7dp"
                    android:text="@string/gift_fragment_popkon_send_end"
                    android:textSize="12sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_end_popkon"
                    android:layout_width="78.3dp"
                    android:layout_height="22.3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="4"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:imeOptions="flagNoExtractUi"
                    android:text="100"
                    android:textSize="10.5sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"
                    android:background="@drawable/present_edit_sub_bg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/gift_tab_small_popkon_width"
                    android:layout_height="@dimen/gift_tab_small_popkon_height"
                    android:layout_marginRight="7.3dp"
                    android:background="@drawable/shape_popcorn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginRight="17dp"
                    android:text="@string/gift_fragment_popkon_repeat_time"
                    android:textSize="13.5sp"
                    android:textColor="@color/gift_text_color"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="0.8dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="16.5dp"
                    android:background="@color/gift_divider_color"/>

                <FrameLayout
                    android:id="@+id/frame_repeat_time"
                    android:layout_width="106.5dp"
                    android:layout_height="22.3dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/present_edit_sub_bg">

                    <Spinner
                        android:id="@+id/spinner_repeat_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="4dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="6.3dp"
                        android:background="@drawable/bt_dropdown_arrow"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/btn_gift_notice"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="6.8dp"
                    android:background="@drawable/icon_gift_notice"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/present_popkon_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/gift_tab_small_popkon_width"
                android:layout_height="@dimen/gift_tab_small_popkon_height"
                android:layout_marginRight="7.3dp"
                android:background="@drawable/shape_popcorn"/>

            <TextView
                android:id="@+id/tv_title_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:layout_marginRight="13.5dp"
                android:textSize="13.5sp"
                android:textColor="@color/gift_text_color"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="0.8dp"
                android:layout_height="12dp"
                android:layout_marginRight="14dp"
                android:background="@color/gift_divider_color"/>

            <TextView
                android:id="@+id/text_pop_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/present_edit_bg"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="#2e261f"
                android:textSize="@dimen/txt_view_info"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btn_send_pop"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/pop_gift_selector"
                android:gravity="center"
                android:text="@string/present"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_view_info"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
