<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/color_F8F8F8"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scoll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_closebtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/icon_actionbar_close" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="67.5dp"
                android:src="@drawable/celuv_bi2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="@string/desc_login"
                android:textColor="@color/color_494949"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/login_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="23dp"
                android:paddingTop="32dp"
                android:paddingRight="23dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/sign_box"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:text="@string/regist_member_id_title"
                        android:textColor="#8f8f8f"
                        android:textSize="11dp" />

                    <EditText
                        android:id="@+id/edit_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="17dp"
                        android:layout_weight="4"
                        android:background="@null"
                        android:gravity="center|left"
                        android:inputType="textUri"
                        android:lines="1"
                        android:nextFocusDown="@+id/edit_pass"
                        android:textColor="#575757"
                        android:textSize="11dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/sign_box"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:text="@string/regist_member_pwd_title"
                        android:textColor="#8f8f8f"
                        android:textSize="11dp" />

                    <EditText
                        android:id="@+id/edit_pass"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="17dp"
                        android:layout_weight="4"
                        android:background="@null"
                        android:gravity="center|left"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLength="20"
                        android:textColor="#575757"
                        android:textSize="11dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/but_login"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/main_button_press"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"/>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/btn_find_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="11.5dp"
                        android:paddingBottom="11.5dp"
                        android:text="@string/login_find_id_password"
                        android:textColor="@color/color_262626"
                        android:textSize="13dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/btn_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="11.5dp"
                        android:paddingBottom="11.5dp"
                        android:text="@string/login_join"
                        android:textColor="@color/color_262626"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:background="@color/color_FFFFFF"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="23dp"
                        android:text="@string/peristalsis_login"
                        android:textColor="#262626"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:id="@+id/korea_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="18dp"
                        android:paddingBottom="25dp">

                        <RelativeLayout
                            android:id="@+id/btn_login_naver"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_naver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/selector_naver_btn" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_naver"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp"
                                android:text="@string/naver_sns"
                                android:textColor="@color/color_4D4D4D"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/custom_kakao_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_kakao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/selector_kakao_btn" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_kakao"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp"
                                android:text="@string/kakao_sns"
                                android:textColor="@color/color_4D4D4D"
                                android:textSize="12dp" />


                            <com.kakao.usermgmt.LoginButton
                                android:id="@+id/com_kakao_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_login_facebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_facebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/selector_facebook_btn" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_facebook"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp"
                                android:text="@string/facebook_sns"
                                android:textColor="@color/color_4D4D4D"
                                android:textSize="12dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_login_google"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_google"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/selector_google_btn" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_google"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp"
                                android:text="@string/google_sns"
                                android:textColor="@color/color_4D4D4D"
                                android:textSize="12dp" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>