<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@color/main_bg"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/receive_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_center_drawable"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/receive_message_title"
            android:textColor="@drawable/selector_center_text" />

        <TextView
            android:id="@+id/send_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_center_drawable"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/send_message_title"
            android:textColor="@drawable/selector_center_text" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/popkon_message_horizontal_bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.8dp"
        android:orientation="horizontal"
        android:weightSum="1.5">

        <TextView
            android:id="@+id/receive_send_msg_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="14.1sp"
            android:text="@string/message_sender_title" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="14.1sp"
            android:text="@string/message_content_title"/>

        <TextView
            android:id="@+id/msg_date_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="14.1sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="14.1sp"
            android:text="@string/message_checked_status_title"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/popkon_message_horizontal_bar_color" />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
