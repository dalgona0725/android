<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/shout_left_img_bg_width"
            android:layout_height="@dimen/shout_left_img_bg_height"
            android:background="@color/color_000000">

            <ImageView
                android:layout_width="@dimen/shout_left_img_width"
                android:layout_height="@dimen/shout_left_img_height"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/icon_shout" />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal_animation_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/txt_bg_viewgroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/txtAnimView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/shout_img_txt_gap_margin_left"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:text=""/>

            </RelativeLayout>

        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout>
